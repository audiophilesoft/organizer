{% extends '@App/task_abstract/show.html.twig' %}
{% set title = 'until.show.title'|trans %}

{% block values %}
    {{ parent() }}
    <tr>
        <th>{{ 'field.deadline'|trans }}</th>
        <td>{{ task.deadline|date("d-m-Y") }}</td>
    </tr>
    <tr>
        <th>{{ 'field.done'|trans }}</th>
        <td>{{ task.done ? 'field.any.value.yes'|trans : 'field.any.value.no'|trans  }}</td>
    </tr>
{% endblock %}